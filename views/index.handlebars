     body {
 	width: 75%;
	margin: 0 auto; 

	display: flex;
	min-height: 100vh;
	flex-direction: column;
	background-color: white;
 }
  html {
 	background-color: #FFC04C;
 }
 img {
     display: block;
    margin: auto;
 }
  h1 {
 	text-align: center;
 	font-family: 'Fontdiner Swanky';
 	font-size: 65px;
 	margin: 50px;
 }
